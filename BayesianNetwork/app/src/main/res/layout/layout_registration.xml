<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:text="Register"
        android:textColor="@color/overlay_dark_90"
        android:textSize="14pt"
        android:textAlignment="center"
        android:layout_height="wrap_content" />
    <LinearLayout

        android:layout_marginLeft="8sp"
        android:layout_marginRight="8sp"
        android:layout_marginTop="8sp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="120sp"
            android:textSize="8pt"
            android:textColor="@color/overlay_dark_90"
            android:text="Username"
            android:layout_height="wrap_content" />
        <EditText
            android:textColor="@color/overlay_dark_90"
            android:backgroundTint="@color/colorPrimary"
            android:id="@+id/rusername"
            android:layout_width="0sp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textCursorDrawable="@null"
            android:maxLines="1"
            android:layout_marginLeft="5sp"
            android:singleLine="true"
            android:hint="Username"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="8sp"
        android:layout_marginRight="8sp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="120sp"
            android:textSize="8pt"
            android:textColor="@color/overlay_dark_90"
            android:text="Password"
            android:layout_height="wrap_content" />
        <EditText
            android:textColor="@color/overlay_dark_90"
            android:id="@+id/rpassword"
            android:layout_width="0sp"
            android:inputType="textPassword"
            android:backgroundTint="@color/colorPrimary"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textCursorDrawable="@null"
            android:maxLines="1"
            android:layout_marginLeft="5sp"
            android:singleLine="true"
            android:hint="Password"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="8sp"
        android:layout_marginRight="8sp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="120sp"
            android:textSize="8pt"
            android:textColor="@color/overlay_dark_90"
            android:text="Confirm"
            android:layout_height="wrap_content" />
        <EditText
            android:textColor="@color/overlay_dark_90"
            android:id="@+id/rconfirm"
            android:layout_width="0sp"
            android:inputType="textPassword"
            android:layout_weight="1"
            android:textCursorDrawable="@null"
            android:backgroundTint="@color/colorPrimary"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_marginLeft="5sp"
            android:singleLine="true"
            android:hint="Confirm"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="8sp"
        android:layout_marginRight="8sp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="120sp"
            android:textSize="8pt"
            android:textColor="@color/overlay_dark_90"
            android:text="Address"
            android:layout_height="wrap_content" />
        <EditText
            android:textColor="@color/overlay_dark_90"
            android:id="@+id/raddress"
            android:layout_width="0sp"
            android:layout_weight="1"
            android:textCursorDrawable="@null"
            android:backgroundTint="@color/colorPrimary"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_marginLeft="5sp"
            android:singleLine="true"
            android:hint="Address"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="8sp"
        android:layout_marginRight="8sp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="120sp"
            android:textSize="8pt"
            android:textColor="@color/overlay_dark_90"
            android:text="Email"
            android:layout_height="wrap_content" />
        <EditText
            android:textColor="@color/overlay_dark_90"
            android:id="@+id/remail"
            android:layout_width="0sp"
            android:layout_weight="1"
            android:backgroundTint="@color/colorPrimary"
            android:textCursorDrawable="@null"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_marginLeft="5sp"
            android:singleLine="true"
            android:hint="Email"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="8sp"
        android:layout_marginRight="8sp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="120sp"
            android:textSize="8pt"
            android:textColor="@color/overlay_dark_90"
            android:text="HP"
            android:layout_height="wrap_content" />
        <EditText
            android:textColor="@color/overlay_dark_90"
            android:id="@+id/rhp"
            android:layout_width="0sp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:digits="0123456789+ "
            android:backgroundTint="@color/colorPrimary"
            android:textCursorDrawable="@null"
            android:layout_marginLeft="5sp"
            android:singleLine="true"
            android:hint="HP"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="8sp"
        android:layout_marginRight="8sp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="120sp"
            android:textSize="8pt"
            android:textColor="@color/overlay_dark_90"
            android:text="Gender"
            android:layout_height="wrap_content" />
        <android.support.v7.widget.AppCompatRadioButton
            android:layout_width="0sp"
            android:id="@+id/rmale"
            android:buttonTint="@color/colorPrimary"
            android:layout_weight="1"
            android:text="Male"
            android:layout_height="wrap_content" />
        <android.support.v7.widget.AppCompatRadioButton
            android:layout_width="0sp"
            android:layout_weight="1"
            android:buttonTint="@color/colorPrimary"
            android:id="@+id/rfemale"
            android:text="Female"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="30sp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="300sp"
            android:text="Register Card"
            android:id="@+id/rregistercard"
            android:textSize="9pt"
            android:textColor="@color/colorAccent"
            android:backgroundTint="@color/colorPrimary"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/rcredittotal"
            android:textSize="9pt"
            android:textColor="@color/overlay_dark_90"
            android:textAlignment="center"
            android:layout_height="wrap_content" />

        <Button
            android:layout_marginTop="40sp"
            android:layout_width="300sp"
            android:text="Sign Up"
            android:id="@+id/rsignup"
            android:textSize="9pt"
            android:textColor="@color/colorAccent"
            android:backgroundTint="@color/colorPrimary"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>